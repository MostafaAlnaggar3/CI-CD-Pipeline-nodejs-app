pipeline {

    // to denfin node which the pipeline will create on it 
    agent {label "gcp-instance"}

    stages {
        stage('get code') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/MostafaAlnaggar3/Jenkins-App'
            }
        }
        
        stage('CI'){
            steps{
                // to git docker hub credential 
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]){
                
                // to build docker image from node app and push it to my docker hub
                sh '''
                    docker build . -f dockerfile -t mnaggar3396/jenkins-node-app
                    docker push mnaggar3396/jenkins-node-app
                
                '''
                }
            }   
        }

        stage('CD'){
            steps{
                // to deploy node app as a k8s deployment
                sh ' kubectl apply -f /home/mostafa-alnaggar/jenkins_home/workspace/nodeapp-pipeline/jenkins-app-deploy.yml 
                     kubectl apply -f /home/mostafa-alnaggar/jenkins_home/workspace/nodeapp-pipeline/jenkins-app-svc.yml  '
            }
        }

        
    }
}
